{
  "private": true,
  "name": "joaotavares",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template src/template.html --prerender --prerenderUrls ./prerender-urls.js && npm run copyManifest",
    "copyManifest": "cp manifest.json build",
    "serve": "preact build && preact serve",
    "dev": "preact watch --template src/template.html --prerender --prerenderUrls ./prerender-urls.js",
    "pretty-quick": "pretty-quick"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.{ts,js,css,html}'"
    }
  },
  "devDependencies": {
    "@preact/prerender-data-provider": "0.0.1",
    "husky": "^4.2.1",
    "if-env": "^1.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "parse-md": "^2.0.4",
    "preact-cli": "^3.0.0-rc.7",
    "preact-cli-plugin-netlify": "^1.5.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "markdown-to-jsx": "^6.10.3",
    "preact": "^10.1.0",
    "preact-markup": "^1.6.0",
    "preact-render-to-string": "^5.1.2",
    "preact-router": "^3.1.0",
    "preact-skillbar": "^0.9.0",
    "prismjs": "^1.19.0"
  },
  "engines" : { 
    "node" : ">=16.0.0"
  }
}
